<div class="container">
  <h2>
    All Boards
  </h2>
  <% @boards.each do |board| %>
    <%= link_to board_path(board) do %>
      <div class="board">
        <div class="board_content">
          <div class="board_detail_actions">
            <div class="dropdown">
              <%= image_tag 'actions.svg', class: 'dropbtn' %>
              <div class="dropdown-content mini">
                <a href="#">編集する</a>
              </div>
            </div>
          </div>
          <div class="board_title">
            <%= board.title %>
          </div>
          <div class="board_sentence">
            <%= board.content.truncate(24, separator: /\s/) %>
          </div>
          <div class="board_detail">
            <%= image_tag 'default-avatar.png' %>
          </div>
        </div>
      </div>
    <% end %>
  <% end %>
  <%= link_to new_board_path do %>
    <div class="board_add">
      +Add new board
    </div>
  <% end %>
</div>